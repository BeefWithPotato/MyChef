<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#AAAAAA"/>
            <corners
                android:radius="15dp"/>

        </shape>
    </item>

    <item android:state_pressed="false">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#fff"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
</selector>