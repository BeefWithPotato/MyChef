<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="#DDDDDD">

            <ImageView
                android:id="@+id/edit_username_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create recipe"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/next"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Next"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practice:"
            android:textStyle="bold"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:layout_marginStart="40dp" />


        <LinearLayout
            android:id="@+id/add_stepsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Step 1:"
                    android:textColor="@color/black"
                    android:layout_marginStart="40dp" />

                <ImageButton
                    android:id="@+id/step_image1"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/step1"
                    android:layout_marginLeft="50dp"
                    android:background="@color/black"
                    android:layout_marginStart="55dp" />

                <TextView
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:text="Step description:"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/step_image1"
                    android:textColor="@color/black"
                    android:layout_marginStart="40dp" />

                <EditText
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/step_image1"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/edit_profile_edit_text"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:layout_marginStart="160dp" />

            </RelativeLayout>

        </LinearLayout>
        <Button
            android:id="@+id/add_new_step"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_below="@+id/add_stepsLayout"
            android:text="add new step"
            android:layout_marginStart="260dp">
        </Button>


    </RelativeLayout>
</ScrollView>