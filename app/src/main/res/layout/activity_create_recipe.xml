<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="#DDDDDD">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create recipe"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/next"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Next"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"/>

        </androidx.appcompat.widget.Toolbar>

        <ImageButton
            android:id="@+id/cover_image"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="55dp"
            android:scaleType="fitXY"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/recipe_name"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cover_image"
            android:layout_gravity="center"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:text="Recipe name:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/recipe_name_text"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cover_image"
            android:layout_toRightOf="@+id/recipe_name"
            android:background="@drawable/edit_profile_edit_text"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recipe_name"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:text="The story behind this delicacy:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/user_story"
            android:layout_width="206dp"
            android:layout_height="125dp"
            android:layout_below="@+id/recipe_name"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/edit_profile_edit_text"
            android:gravity="start"
            android:maxLines="10"
            android:textAlignment="viewStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_story"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="Ingredients:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/name1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:text="1.Name:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/nameText"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/name1"
            android:background="@drawable/edit_profile_edit_text"
            android:gravity="start"
            android:maxLines="10"
            android:textAlignment="viewStart"
            android:textSize="15sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:text="Dosage:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dosage1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/name1"
            android:background="@drawable/edit_profile_edit_text"
            android:gravity="start"
            android:maxLines="10"
            android:textAlignment="viewStart"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="55dp"
            android:text="2.Name:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:id="@+id/nameText2"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/name1"
            android:background="@drawable/edit_profile_edit_text"
            android:gravity="start"
            android:maxLines="10"
            android:textAlignment="viewStart"
            android:textSize="15sp" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="55dp"
            android:text="Dosage:"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/dosage2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ingredients"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@+id/name1"
            android:background="@drawable/edit_profile_edit_text"
            android:gravity="start"
            android:maxLines="10"
            android:textAlignment="viewStart"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/add_ingredientsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ingredients"
            android:layout_marginTop="90dp">

        </LinearLayout>


        <Button
            android:id="@+id/add_ingredients"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/add_ingredientsLayout"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="-1dp"
            android:text="Add new line"
            android:textColor="@color/black" />

    </RelativeLayout>
</ScrollView>