<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDDDDD">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:background="#DDDDDD">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create recipe"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/next"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Next"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp" />

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Practice:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black" />


        <LinearLayout
            android:id="@+id/add_stepsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/step1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="Step 1:"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="40dp" />

                <ImageButton
                    android:id="@+id/step_image1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/step1"
                    android:scaleType="centerCrop"
                    android:background="@drawable/add_image"
                    android:layout_centerHorizontal="true"/>

                <EditText
                    android:id="@+id/description1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:layout_below="@+id/step_image1"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:hint="Add step details ..."
                    android:background="@drawable/edit_profile_edit_text"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:textSize="20sp"
                    android:padding="10dp"
                    android:maxLines="10"/>

            </RelativeLayout>

        </LinearLayout>
        <Button
            android:id="@+id/add_new_step"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_below="@+id/add_stepsLayout"
            android:text="add new step"
            android:layout_marginStart="260dp">
        </Button>

        <TextView
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/add_new_step"
            android:text="Tips:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/tipText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="90dp"
            android:layout_below="@+id/tips"
            android:layout_margin="10dp"
            android:background="@drawable/edit_profile_edit_text"
            android:textAllCaps="false"
            android:hint="Add some tips ..."
            android:textColor="#000000"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textSize="20sp"
            android:padding="10dp"
            android:maxLines="10"/>
        <TextView
            android:id="@+id/kitchenware_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/tipText"
            android:text="Kitchenware:"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/add_kitchenwareLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/kitchenware_text"
            android:gravity="center_horizontal">
            <EditText
                android:id="@+id/kitchenware1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="90dp"
                android:gravity="start"
                android:background="@drawable/edit_profile_edit_text"
                android:layout_margin="10dp"
                android:textColor="#000000"
                android:textAlignment="viewStart"
                android:textSize="20sp"
                android:padding="10dp"
                android:maxLines="10"/>

        </LinearLayout>
        <Button
            android:id="@+id/add_new_kitchenware"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/add_kitchenwareLayout"
            android:text="add Kitchenware"
            android:layout_marginLeft="230dp"
            android:layout_marginStart="230dp">
        </Button>

        <Button
            android:id="@+id/preview"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/add_kitchenwareLayout"
            android:text="Preview"
            android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="50dp">
        </Button>
        <Button
            android:id="@+id/publish"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_below="@+id/add_kitchenwareLayout"
            android:text="publish recipe"
            android:layout_marginLeft="125dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="90dp">
        </Button>

    </RelativeLayout>
</ScrollView>