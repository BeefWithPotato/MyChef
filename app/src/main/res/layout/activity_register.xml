<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_login"
        android:scaleType="fitXY"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MyChef"
                    android:textSize="50sp"
                    android:textColor="#dd6572"
                    android:layout_gravity="center_horizontal"/>

                <ImageView
                    android:id="@+id/logo_login"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cookp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/set_username"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_username"
                    android:drawableLeft="@drawable/user_white"
                    android:drawablePadding="5dp"
                    android:hint="Enter your Username"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#bfbfbf"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/set_password"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:inputType="textPassword"
                    android:hint="Set your Password"
                    android:textColorHint="#bfbfbf"
                    android:maxLines="1"
                    android:layout_below="@id/set_username"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_username"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/retype_password"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:inputType="textPassword"
                    android:hint="Retype your Password"
                    android:textColorHint="#bfbfbf"
                    android:maxLines="1"
                    android:layout_below="@id/set_password"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_username"
                    android:drawableLeft="@drawable/password"
                    android:drawablePadding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"/>

                <EditText
                    android:id="@+id/set_email"
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:textSize="20sp"
                    android:textColor="#fff"
                    android:inputType="textEmailAddress"
                    android:hint="Enter your Email Address"
                    android:textColorHint="#bfbfbf"
                    android:maxLines="1"
                    android:layout_below="@id/retype_password"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_username"
                    android:drawableLeft="@drawable/email"
                    android:drawablePadding="10dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/set_email"
                    android:layout_marginTop="10dp"
                    android:text="Register"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="#fff"
                    android:background="@drawable/btn_register"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>
    </ScrollView>
</RelativeLayout>